@model IEnumerable<JobEngine.Web.Areas.PowerShellJobs.Models.PowerShellJobViewModel>

@{
    ViewBag.Title = "Select PowerShell Script";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>      
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>      
        <td>
            @Html.ActionLink("Select", "CreatePowerShellJob", new { id=item.PowerShellJobId }) 
        </td>
    </tr>
}

</table>
