<!DOCTYPE html>

<html>
<head>

    @*<meta name="viewport" content="width=device-width" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/default-theme.css" rel="stylesheet" />

    @RenderSection("styles", false)
    @RenderSection("scripts", false)
    @RenderSection("style", false)

    <style>
        .title {
            text-align: left;
            margin-left: 50px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#text').animate({
                marginLeft: '-=50px'
            }, 115);
            $('.page-wrapper').animate({
                marginLeft: '+=50px'
            }, 50);

        });
    </script>

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="wrapper" style="">

        <!-- Static navbar -->
        <nav class="navbar navbar-static-top navbar-inverse navbar-custom">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/" style="font-style:italic;font-weight:bold;color:#b2eb13;"><i class="fa fa-cube" >&nbsp;</i>Job Engine</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse" style="padding-right:50px;">
                    <ul class="nav navbar-nav">
                        <li class="active-x">
                            <a href="~/">
                                <i class="fa fa-home fa-lg">&nbsp;&nbsp;</i>Home
                            </a>
                        </li>
                        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Customers<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="active-x">
                                <a href="~/Customers/">
                                    <i class="fa fa-user "></i>&nbsp;&nbsp;&nbsp;Customers
                                </a>
                            </li>
                            <li class="active-x">
                                <a href="~/Clients/">
                                    <i class="fa fa-cloud "></i>&nbsp;&nbsp;Job Engine Clients
                                </a>
                            </li>
                        </ul>
                        </li>
                      
                        <li class="dropdown">                           
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Jobs<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="~/AssemblyJobs">
                                        <i class="fa fa-file-code-o "></i>&nbsp;&nbsp;Assembly Jobs
                                    </a>
                                </li>
                                <li>
                                    <a href="~/PowerShellJobs">
                                        <i class="fa fa-file-code-o "></i>&nbsp;&nbsp;PowerShell Jobs
                                    </a>
                                </li>
                                <li>
                                    <a href="~/ScheduledJobs">
                                        <i class="fa fa-tasks"></i>&nbsp;&nbsp;Scheduled Jobs
                                    </a>
                                </li>
                            </ul>
                        </li>                        
                        <li class="dropdown">
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Management<span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="~/SiteManagement/UsersAdmin"><i class="fa fa-user"></i>&nbsp;&nbsp;Users</a></li>
                                    <li><a href="~/SiteManagement/RolesAdmin"><i class="fa fa-users"></i>&nbsp;&nbsp;Roles</a></li>
                                    <li>
                                        <a href="~/Hangfire">
                                            <i class="fa fa-area-chart"></i>&nbsp;&nbsp;Hangfire Dashboard
                                        </a>
                                    </li>
                                </ul>
                            }
                        </li>
                    </ul>
                    @Html.Partial("/Views/Shared/_LoginPartial.cshtml")
                </div>
            </div>
        </nav>     
        </div>

    <div class="page-wrapper" style="margin-left:-50px;">

        <div class="container-fluid">
            <div class="row" >

                @if (!string.IsNullOrEmpty(ViewBag.Title))
                {
                    <div class="col-md-3">
                        <div id="text" class="title">
                            <h2>@ViewBag.Title</h2>
                        </div>
                    </div>
                }


                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger alert-error">
                        <a href="#" class="close" data-dismiss="alert"></a>
                        <strong>Error!</strong> @TempData["ErrorMessage"]
                        <a href="#" class="close" data-dismiss="alert">&times;</a>
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="col-md-9">

                        <div id="successMessage" class="alert alert-success">
                            <a href="#" class="close" data-dismiss="alert"></a>
                            <strong>Success!</strong> @TempData["SuccessMessage"]
                            <a href="#" class="close" data-dismiss="alert">&times;</a>
                        </div>

                        <script>
                            setTimeout(function () {
                                $('#successMessage').fadeOut(1000);
                            }, 4 * 1000);
                        </script>
                    </div>
                }
            </div>
            @RenderBody()
        </div>
    </div>
</body>

</html>

